@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Nómina vigente";
    var departments = (IEnumerable<aplicacionNomina.Core.Models.Department>)ViewBag.Departments;
    var fecha = (DateTime)ViewBag.Fecha;
    int? deptNo = ViewBag.DeptNo as int?;
}
<h3>Nómina vigente</h3>
<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <label class="form-label">Departamento</label>
        <select name="deptNo" class="form-select">
            <option value="">-- Todos --</option>
            @foreach (var d in departments)
            {
                if (deptNo.HasValue && deptNo.Value == d.DeptNo)
                {
                    <option value="@d.DeptNo" selected>@d.DeptName (@d.DeptNo)</option>
                }
                else
                {
                    <option value="@d.DeptNo">@d.DeptName (@d.DeptNo)</option>
                }
            }
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">Fecha</label>
        <input name="fecha" type="date" value="@fecha.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <div class="col-md-2 align-self-end">
        <button class="btn btn-primary">Filtrar</button>
    </div>
</form>
