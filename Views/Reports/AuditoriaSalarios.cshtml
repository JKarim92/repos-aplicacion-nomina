@model IEnumerable<aplicacionNomina.Core.Models.LogAuditoriaSalarios>

@{
    ViewData["Title"] = "Auditoría de Salarios";
}

<h3>Auditoría de Salarios</h3>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-3">
        <label class="form-label">Empleado (EmpNo)</label>
        <input type="number" name="empNo" class="form-control" value="@ViewBag.EmpNo" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Desde</label>
        <input type="date" name="desde" value="@(((DateTime)ViewBag.Desde).ToString("yyyy-MM-dd"))" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Hasta</label>
        <input type="date" name="hasta" value="@(((DateTime)ViewBag.Hasta).ToString("yyyy-MM-dd"))" class="form-control" />
    </div>
    <div class="col-md-3 align-self-end">
        <button class="btn btn-primary w-100">Filtrar</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>EmpNo</th>
            <th>Usuario</th>
            <th>Salario</th>
            <th>Detalle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.FechaActualizacion.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@r.EmpNo</td>
                <td>@r.Usuario</td>
                <td>@r.Salario</td>
                <td>@r.DetalleCambio</td>
            </tr>
        }
    </tbody>
</table>


