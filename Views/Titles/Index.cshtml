@model IEnumerable<aplicacionNomina.Core.Models.Title>
@{
    var emp = (aplicacionNomina.Core.Models.Employee)ViewBag.Emp;
    ViewData["Title"] = "Títulos de " + emp.NombreCompleto;
}
<h3>Títulos de @emp.NombreCompleto</h3>
<a class="btn btn-primary mb-2" asp-action="Create" asp-route-empNo="@emp.EmpNo">Nuevo título</a>
<table class="table table-striped">
    <thead><tr><th>Título</th><th>Desde</th><th>Hasta</th></tr></thead>
    <tbody>
        @foreach(var t in Model)
        {
            <tr>
                <td>@t.TitleName</td>
                <td>@t.FromDate.ToString("yyyy-MM-dd")</td>
                <td>@(t.ToDate?.ToString("yyyy-MM-dd") ?? "-")</td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Employees" asp-action="Index" class="btn btn-secondary">Volver</a>
