@model IEnumerable<aplicacionNomina.Core.Models.Department>
@{
    ViewData["Title"] = "Departamentos";
}
<h3>Departamentos</h3>
<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input class="form-control" name="q" value="@ViewBag.Query" placeholder="Buscar dept_no/nombre"/>
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-primary">Buscar</button>
        <a asp-action="Create" class="btn btn-primary">Nuevo</a>
    </div>
</form>

<table class="table table-striped">
    <thead><tr><th>No</th><th>Nombre</th><th>Activo</th><th></th></tr></thead>
    <tbody>
        @foreach(var d in Model)
        {
            <tr>
                <td>@d.DeptNo</td>
                <td>@d.DeptName</td>
                <td>@(d.Activo ? "SÃ­":"No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@d.DeptNo" class="btn btn-sm btn-outline-primary">Editar</a>
                    <form asp-action="Desactivar" asp-route-id="@d.DeptNo" method="post" class="d-inline">
                        <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Desactivar depto?')">Desactivar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
