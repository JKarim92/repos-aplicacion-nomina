@model aplicacionNomina.Core.Models.Department
@{
    ViewData["Title"] = "Editar departamento";
}
<h3>Editar departamento</h3>
<form asp-action="Edit" method="post" class="row g-3">
  <input type="hidden" asp-for="DeptNo"/>
  <div class="col-md-6">
    <label class="form-label">Nombre</label>
    <input asp-for="DeptName" class="form-control"/>
    <span asp-validation-for="DeptName" class="text-danger"></span>
  </div>
  <div class="col-md-3 form-check">
    <label class="form-check-label">Activo</label>
    <input asp-for="Activo" class="form-check-input"/>
  </div>
  <div class="col-12">
    <button class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
  </div>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}
