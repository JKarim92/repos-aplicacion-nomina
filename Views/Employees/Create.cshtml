@model aplicacionNomina.Core.Models.Employee
@{
    ViewData["Title"] = "Nuevo empleado";
}
<h3>Nuevo empleado</h3>
<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-2">
        <label class="form-label">EmpNo</label>
        <input asp-for="EmpNo" class="form-control"/>
        <span asp-validation-for="EmpNo" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">CI</label>
        <input asp-for="Ci" class="form-control"/>
        <span asp-validation-for="Ci" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Correo</label>
        <input asp-for="Correo" class="form-control"/>
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="col-md-2">
        <label class="form-label">Género (M/F/O)</label>
        <input asp-for="Gender" class="form-control"/>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="col-md-2 form-check">
        <label class="form-check-label">Activo</label>
        <input asp-for="Activo" class="form-check-input"/>
    </div>

    <div class="col-md-3">
        <label class="form-label">Nombres</label>
        <input asp-for="FirstName" class="form-control"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Apellidos</label>
        <input asp-for="LastName" class="form-control"/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Fecha Nacimiento</label>
        <input asp-for="BirthDate" type="date" class="form-control"/>
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Fecha Contratación</label>
        <input asp-for="HireDate" type="date" class="form-control"/>
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>
    <div class="col-12">
        <button class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
