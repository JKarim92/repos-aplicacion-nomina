@model aplicacionNomina.Core.ViewModels.DashboardVm
@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<h3 class="mb-3">Dashboard</h3>

<!-- KPIs fila 1 -->
<div class="row g-3">
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-secondary">Empleados activos</div>
                    <div class="fs-3 fw-bold">@Model.EmpleadosActivos</div>
                </div>
                <i class="bi bi-people fs-1 text-primary"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-secondary">Departamentos</div>
                    <div class="fs-3 fw-bold">@Model.DepartamentosActivos</div>
                </div>
                <i class="bi bi-diagram-3 fs-1 text-success"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-secondary">Managers activos</div>
                    <div class="fs-3 fw-bold">@Model.ManagersActivos</div>
                </div>
                <i class="bi bi-person-badge fs-1 text-warning"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-secondary">Nómina vigente</div>
                    <div class="fs-3 fw-bold">@Model.NominaVigenteTotal</div>
                    <div class="small text-secondary">Promedio: @Model.SalarioPromedio.ToString("N0")</div>
                </div>
                <i class="bi bi-cash-stack fs-1 text-danger"></i>
            </div>
        </div>
    </div>
</div>

<!-- KPIs fila 2 -->
<div class="row g-3 mt-1">
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-secondary">Altas últimos 30 días</div>
                <div class="fs-3 fw-bold">@Model.AltasUltimos30d</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-secondary">Cambios de salario (30d)</div>
                <div class="fs-3 fw-bold">@Model.CambiosSalario30d</div>
            </div>
        </div>
    </div>
</div>

<!-- Charts -->
<div class="row g-3 mt-1">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white fw-semibold">Nómina vigente por departamento</div>
            <div class="card-body"><canvas id="chartNominaDept"></canvas></div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white fw-semibold">Cambios de salario (últimos 14 días)</div>
            <div class="card-body"><canvas id="chartCambios"></canvas></div>
        </div>
    </div>
</div>

<!-- Tablas -->
<div class="row g-3 mt-1">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white fw-semibold">Últimos cambios salariales</div>
            <div class="card-body p-0">
                <table class="table table-sm mb-0">
                    <thead class="table-light">
                        <tr><th>EmpNo</th><th>Nombre</th><th>Salario</th><th>Fecha</th><th>Usuario</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.UltimosCambios)
                        {
                            <tr>
                                <td>@r.EmpNo</td>
                                <td>@r.Nombre</td>
                                <td>@r.Salario</td>
                                <td>@r.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>@r.Usuario</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white fw-semibold">Nuevos empleados (30 días)</div>
            <div class="card-body p-0">
                <table class="table table-sm mb-0">
                    <thead class="table-light">
                        <tr><th>EmpNo</th><th>Nombre</th><th>Alta</th><th>Correo</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model.NuevosEmpleados)
                        {
                            <tr>
                                <td>@e.EmpNo</td>
                                <td>@e.Nombre</td>
                                <td>@e.Alta.ToString("dd/MM/yyyy")</td>
                                <td>@e.Correo</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const depts   = @Html.Raw(ViewBag.ChartDepts);
        const nomina  = @Html.Raw(ViewBag.ChartNomina);
        const dias    = @Html.Raw(ViewBag.ChartDias);
        const cambios = @Html.Raw(ViewBag.ChartCambios);

        new Chart(document.getElementById('chartNominaDept'), {
          type: 'bar',
          data: { labels: depts, datasets: [{ label: 'Total', data: nomina }] },
          options: { responsive: true, plugins: { legend: { display: false } } }
        });

        new Chart(document.getElementById('chartCambios'), {
          type: 'line',
          data: { labels: dias, datasets: [{ label: 'Cambios', data: cambios, tension: .3, fill: true }] },
          options: { responsive: true, plugins: { legend: { display: false } } }
        });
    </script>
}
